<h1>Edit info for <%= @band.name() %></h1>

<form action="/update" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Band Name</label>
  <input id="name" name="name" class="form-control" type="text" value="<%= @band.name() %>" required="required">
  <input value="<%= @band.id() %>" name="id" class="form-control" type="hidden">

  <button type="submit" class="btn">Submit</button>
</form>

<form action="/">
  <button type="submit" class="btn btn-primary">Back to Band Land</button>
</form>
